{
  "info": {
    "name": "Activity Tracking API",
    "description": "API collection for testing Activity Tracking System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Activity Tracking",
      "item": [
        {
          "name": "Log Activity (Manual)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"service_type\": \"itinerary\",\n  \"action\": \"generate\",\n  \"details\": {\n    \"description\": \"Generated 3-day itinerary\",\n    \"budget_range\": \"â‚¹50000\"\n  },\n  \"request_data\": {\n    \"duration\": 3,\n    \"budget\": 50000,\n    \"interests\": [\"temples\", \"trekking\"],\n    \"start_location\": \"Dehradun\"\n  },\n  \"response_data\": {\n    \"success\": true,\n    \"days_count\": 3\n  },\n  \"metadata\": {\n    \"language\": \"english\",\n    \"duration_ms\": 1500\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/activity/log",
              "host": ["{{base_url}}"],
              "path": ["activity", "log"]
            }
          }
        },
        {
          "name": "Get Activity History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/history?limit=20&skip=0",
              "host": ["{{base_url}}"],
              "path": ["activity", "history"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "service_type",
                  "value": "itinerary",
                  "disabled": true
                },
                {
                  "key": "days",
                  "value": "7",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Recent Activities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/recent?limit=10",
              "host": ["{{base_url}}"],
              "path": ["activity", "recent"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Usage Summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/summary?days=30",
              "host": ["{{base_url}}"],
              "path": ["activity", "summary"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        },
        {
          "name": "Get Activity Timeline",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/timeline?group_by=day&days=7",
              "host": ["{{base_url}}"],
              "path": ["activity", "timeline"],
              "query": [
                {
                  "key": "group_by",
                  "value": "day",
                  "description": "day|week|month"
                },
                {
                  "key": "days",
                  "value": "7"
                }
              ]
            }
          }
        },
        {
          "name": "Get Service Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/analytics/itinerary",
              "host": ["{{base_url}}"],
              "path": ["activity", "analytics", "itinerary"]
            }
          }
        },
        {
          "name": "Delete Activity History",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/history",
              "host": ["{{base_url}}"],
              "path": ["activity", "history"]
            }
          }
        }
      ]
    },
    {
      "name": "Itinerary with Activity",
      "item": [
        {
          "name": "Generate Itinerary",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// This will automatically log activity when you integrate",
                  "// the activity logging in the itinerary endpoint"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"duration\": 3,\n  \"budget\": 50000,\n  \"interests\": [\"temples\", \"trekking\"],\n  \"start_location\": \"Dehradun\",\n  \"travel_style\": \"moderate\",\n  \"language\": \"english\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/itinerary/generate",
              "host": ["{{base_url}}"],
              "path": ["itinerary", "generate"]
            }
          }
        }
      ]
    },
    {
      "name": "Vision with Activity",
      "item": [
        {
          "name": "Analyze Image",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "language",
                  "value": "english",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/vision/analyze",
              "host": ["{{base_url}}"],
              "path": ["vision", "analyze"]
            }
          }
        }
      ]
    },
    {
      "name": "Test Activity Filters",
      "item": [
        {
          "name": "Filter by Service Type (Itinerary)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/history?service_type=itinerary&limit=10",
              "host": ["{{base_url}}"],
              "path": ["activity", "history"],
              "query": [
                {
                  "key": "service_type",
                  "value": "itinerary"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Service Type (Vision)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/history?service_type=vision&limit=10",
              "host": ["{{base_url}}"],
              "path": ["activity", "history"],
              "query": [
                {
                  "key": "service_type",
                  "value": "vision"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Last 7 Days Activities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/history?days=7",
              "host": ["{{base_url}}"],
              "path": ["activity", "history"],
              "query": [
                {
                  "key": "days",
                  "value": "7"
                }
              ]
            }
          }
        },
        {
          "name": "Last 30 Days Itinerary Activities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/history?service_type=itinerary&days=30",
              "host": ["{{base_url}}"],
              "path": ["activity", "history"],
              "query": [
                {
                  "key": "service_type",
                  "value": "itinerary"
                },
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
