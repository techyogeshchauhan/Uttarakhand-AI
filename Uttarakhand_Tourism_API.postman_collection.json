{
  "info": {
    "name": "Uttarakhand Tourism AI API",
    "description": "Complete API collection for testing authentication, chat, history, and feedback features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "message_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.data.token);",
                  "    pm.collectionVariables.set('user_id', response.data.user._id);",
                  "    console.log('Token saved:', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\",\n  \"name\": \"Test User\",\n  \"language\": \"english\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.data.token);",
                  "    pm.collectionVariables.set('user_id', response.data.user._id);",
                  "    console.log('Token saved:', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"language\": \"hindi\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "AI Chat (Public)",
      "item": [
        {
          "name": "Send Chat Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Tell me about Nainital\",\n  \"language\": \"english\",\n  \"conversation_history\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/chat/message",
              "host": ["{{base_url}}"],
              "path": ["chat", "message"]
            }
          }
        },
        {
          "name": "Get Suggestions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/chat/suggestions?language=english",
              "host": ["{{base_url}}"],
              "path": ["chat", "suggestions"],
              "query": [
                {
                  "key": "language",
                  "value": "english"
                }
              ]
            }
          }
        },
        {
          "name": "Translate Text",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Hello, how are you?\",\n  \"source_language\": \"english\",\n  \"target_language\": \"hindi\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chat/translate",
              "host": ["{{base_url}}"],
              "path": ["chat", "translate"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat History",
      "item": [
        {
          "name": "Save User Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('session_id', response.data.session_id);",
                  "    pm.collectionVariables.set('message_id', response.data.message._id);",
                  "    console.log('Session ID:', response.data.session_id);",
                  "    console.log('Message ID:', response.data.message._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"user\",\n  \"content\": \"Tell me about Nainital\",\n  \"metadata\": {\n    \"language\": \"english\",\n    \"query_type\": \"destination\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/history/message",
              "host": ["{{base_url}}"],
              "path": ["history", "message"]
            }
          }
        },
        {
          "name": "Save Assistant Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('message_id', response.data.message._id);",
                  "    console.log('Assistant Message ID:', response.data.message._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"role\": \"assistant\",\n  \"content\": \"Nainital is a beautiful hill station in Uttarakhand...\",\n  \"metadata\": {\n    \"language\": \"english\",\n    \"response_time\": 1.5,\n    \"tokens_used\": 150\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/history/message",
              "host": ["{{base_url}}"],
              "path": ["history", "message"]
            }
          }
        },
        {
          "name": "Get Chat History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history/history?limit=50&skip=0",
              "host": ["{{base_url}}"],
              "path": ["history", "history"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "skip",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Get Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history/sessions?limit=20",
              "host": ["{{base_url}}"],
              "path": ["history", "sessions"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Session Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history/session/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["history", "session", "{{session_id}}"]
            }
          }
        },
        {
          "name": "Submit Feedback (Like)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message_id\": \"{{message_id}}\",\n  \"rating\": 1,\n  \"comment\": \"Very helpful response!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/history/feedback",
              "host": ["{{base_url}}"],
              "path": ["history", "feedback"]
            }
          }
        },
        {
          "name": "Submit Feedback (Dislike)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message_id\": \"{{message_id}}\",\n  \"rating\": -1,\n  \"comment\": \"Not accurate\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/history/feedback",
              "host": ["{{base_url}}"],
              "path": ["history", "feedback"]
            }
          }
        },
        {
          "name": "Get Analytics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history/analytics",
              "host": ["{{base_url}}"],
              "path": ["history", "analytics"]
            }
          }
        },
        {
          "name": "Delete Message",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history/message/{{message_id}}",
              "host": ["{{base_url}}"],
              "path": ["history", "message", "{{message_id}}"]
            }
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history/session/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["history", "session", "{{session_id}}"]
            }
          }
        },
        {
          "name": "Delete All History",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history/history",
              "host": ["{{base_url}}"],
              "path": ["history", "history"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "health"]
        }
      }
    }
  ]
}
