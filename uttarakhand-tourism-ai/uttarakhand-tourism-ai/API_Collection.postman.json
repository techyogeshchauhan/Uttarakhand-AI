{
  "info": {
    "name": "Uttarakhand Tourism API",
    "description": "API collection for testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "base_url", "value": "http://localhost:5000/api"},
    {"key": "auth_token", "value": ""},
    {"key": "message_id", "value": ""}
  ],
  "item": [
    {
      "name": "1. Signup",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"test@example.com\",\"password\":\"test123\",\"name\":\"Test User\"}"
        },
        "url": {"raw": "{{base_url}}/auth/signup"}
      }
    },
    {
      "name": "2. Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"test@example.com\",\"password\":\"test123\"}"
        },
        "url": {"raw": "{{base_url}}/auth/login"}
      }
    },
    {
      "name": "3. Chat (Public)",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"message\":\"Tell me about Nainital\",\"language\":\"english\"}"
        },
        "url": {"raw": "{{base_url}}/chat/message"}
      }
    },
    {
      "name": "4. Save Message",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"role\":\"assistant\",\"content\":\"Nainital is beautiful...\"}"
        },
        "url": {"raw": "{{base_url}}/history/message"}
      }
    },
    {
      "name": "5. Submit Feedback",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"message_id\":\"{{message_id}}\",\"rating\":1}"
        },
        "url": {"raw": "{{base_url}}/history/feedback"}
      }
    },
    {
      "name": "6. Get History",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}],
        "url": {"raw": "{{base_url}}/history/history"}
      }
    }
  ]
}
